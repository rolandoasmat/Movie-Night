<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@+id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.asmat.rolando.popularmovies.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <include app:graph="@navigation/movie_details" />
    <action
        android:id="@+id/action_globalAction_to_movieDetailsScreen"
        app:destination="@id/movie_details" >
        <argument
            android:name="movieIdArg"
            app:argType="integer" />
    </action>

</navigation>