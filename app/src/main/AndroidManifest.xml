<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asmat.rolando.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.asmat.rolando.popularmovies.TERMS_READ" />
    <uses-permission android:name="com.asmat.rolando.popularmovies.TERMS_WRITE" />

    <!--usesCleartextTraffic: https://stackoverflow.com/questions/53139689/picasso-image-loading-issue-with-android-9-0-pie-->
    <application
        android:name=".MovieNightApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- Main Activity -->
        <activity
            android:name="com.asmat.rolando.popularmovies.ui.discover.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Movie Detail -->
        <activity
            android:name="com.asmat.rolando.popularmovies.ui.moviedetails.MovieDetailsActivity"
            android:parentActivityName="com.asmat.rolando.popularmovies.ui.discover.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asmat.rolando.popularmovies.ui.discover.MainActivity" />
        </activity>

        <!-- Cast Detail -->
        <activity
            android:name="com.asmat.rolando.popularmovies.ui.castdetails.CastDetailsActivity"
            android:parentActivityName="com.asmat.rolando.popularmovies.ui.moviedetails.MovieDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asmat.rolando.popularmovies.ui.moviedetails.MovieDetailsActivity" />
        </activity>

    </application>

</manifest>